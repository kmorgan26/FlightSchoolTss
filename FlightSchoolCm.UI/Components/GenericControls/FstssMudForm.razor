@typeparam TItem

<MudItem xs="12" sm="9" md="7" lg="4">
    <MudForm @ref="@Options.MudForm">

    </MudForm>
    @EditTemplate(FormItem)
</MudItem>

<MudItem xs="2">
    <MudButton Variant="@Options.ButtonVariant" Color="Options.ButtonColor" />
</MudItem>

@code {

    [Parameter]
    public FstssFormOptions? Options { get; set; } = new();

    [Parameter]
    public RenderFragment FormItem { get; set; }

    [Parameter]
    public RenderFragment<TItem> EditTemplate { get; set; }

    [Parameter]
    public MudForm? MudForm { get; set; } = new();
    
}
