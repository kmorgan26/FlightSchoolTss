
<FstssTable TItem="MaintainerVm" FstssItem="BindMaintainerDto">
    <FstssHeaderTemplate>
        <MudTh>Id</MudTh>
        <MudTh>Name</MudTh>
        <MudTh></MudTh>
    </FstssHeaderTemplate>
    <FstssRowTemplate>
        <MudTd DataLabel="ID">@context.Id</MudTd>
        <MudTd DataLabel="Name">@context.Name</MudTd>
        <MudTd DataLabel="DELETE">
            <MudIconButton Icon="@Icons.Material.Filled.Delete" OnClick="@(() =>OnButtonClick(context))" Color="Color.Error" />
        </MudTd>
    </FstssRowTemplate>
</FstssTable>


@code {

    [Parameter]
    public EventCallback<MaintainerVm> MaintainerVm { get; set; }

    [Parameter]
    public EventCallback<MaintainerVm> OnMaintainerDelete { get; set; }

    public async void OnButtonClick(MaintainerVm vm)
    {
        await OnMaintainerDelete.InvokeAsync(vm);
    }
    private void BindMaintainerDto(MaintainerVm vm)
    {
        MaintainerVm.InvokeAsync(vm);
    }
}