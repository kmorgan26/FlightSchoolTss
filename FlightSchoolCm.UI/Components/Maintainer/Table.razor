@page "/maintainer"
@using FlightSchoolCm.UI.Services;
@inject MaintainersApiClient maintainerApi

<PageTitle>Maintainers</PageTitle>

@if (_maintainers is null)
{
    <p><em>Loading...</em></p>
}
else
{
    <MudTable Items="@_maintainers" Hover="true" Breakpoint="Breakpoint.Sm" LoadingProgressColor="Color.Info">
        <HeaderContent>
            <MudTh>Id</MudTh>
            <MudTh>Name</MudTh>
        </HeaderContent>
        <RowTemplate>
            <MudTd DataLabel="ID">@context.Id</MudTd>
            <MudTd DataLabel="Name">@context.Name</MudTd>
        </RowTemplate>
    </MudTable>
}

@code {
    private List<MaintainerVm>? _maintainers;

    protected override async Task OnInitializedAsync()
    {
        _maintainers = await maintainerApi.GetMaintainersAsync();
    }
}