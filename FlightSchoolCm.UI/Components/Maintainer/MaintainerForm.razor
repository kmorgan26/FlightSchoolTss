@using FlightSchoolCm.UI.Components.Maintainer.Store;
@inherits FluxorComponent
@inject IState<MaintainerState> State

<FSForm OnSubmitForm="SubmitForm" TItem="MaintainerDto">
    <FormControls>

        <MudGrid>
            <MudItem>

                <MudTextField @bind-Value="State.Value.MaintainerDto!.Name"
                              Variant="Variant.Outlined"
                              For="(() => State.Value.MaintainerDto!.Name)"
                              Label="Maintainer Name"
                              Class="my-6" />
            </MudItem>
        </MudGrid>

    </FormControls>
</FSForm>

@code {

    [Parameter]
    public EventCallback OnSubmitForm { get; set; }

    [Parameter]
    public MudForm? MudForm { get; set; } = new();

    private async Task SubmitForm()
    {
        await OnSubmitForm.InvokeAsync();
        await MudForm!.ResetAsync();
    }
}