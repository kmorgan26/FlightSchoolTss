
<FSForm OnSubmitForm="SubmitForm" TItem="MaintainerDto" Validation="_validator.ValidateValue">
    <FormControls>

        <MudGrid>
            <MudItem lg="4">

                <MudTextField @bind-Value="_dto.Name"
                              Variant="Variant.Outlined"
                              For="(() => _dto.Name)"
                              Label="Maintainer Name"
                              OnlyValidateIfDirty="true"
                              Class="my-6" />
            </MudItem>
        </MudGrid>

    </FormControls>
</FSForm>

@code {

    [Parameter]
    public EventCallback<MudForm> OnSubmitForm { get; set; }

    [Parameter]
    public MudForm? MudForm { get; set; } = new();

    [CascadingParameter]
    public MaintainerDto _dto { get; set; } = new();

    MaintainerDtoValidator _validator = new();

    private async Task SubmitForm()
    {
        await OnSubmitForm.InvokeAsync(MudForm);
    }
}