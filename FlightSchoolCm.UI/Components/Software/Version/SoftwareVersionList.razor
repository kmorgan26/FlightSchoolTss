@namespace FlightSchoolCm.UI.Components.Software

<FSList TItem="SoftwareVersionDto" Items="SoftwareVersionDtos" OnSelectedItemsChanged="SelectionChanged">
    <ChildContent>
        @foreach (var item in SoftwareVersionDtos!)
        {
            <MudListItem Text="@item.Name" Value="@item.Id" />
        }
    </ChildContent>
</FSList>

@code {

    [Parameter]
    public EventCallback<int> OnSelectedSoftwareVersionIdChanged { get; set; }

    [Parameter]
    public IEnumerable<SoftwareVersionDto>? SoftwareVersionDtos { get; set; }
    
    private async Task SelectionChanged(int id)
    {
        await OnSelectedSoftwareVersionIdChanged.InvokeAsync(id);
    }

}