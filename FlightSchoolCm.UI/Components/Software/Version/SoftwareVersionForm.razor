@namespace FlightSchoolCm.UI.Components.Software

<FSForm OnSubmitForm="SubmitForm" TItem="SoftwareVersionDto">
    <FormControls>

        <MudGrid>

            <MudItem lg="4">

                <MudTextField @bind-Value="_dto.Name"
                              Variant="Variant.Outlined"
                              For="(() => _dto.Name)"
                              Label="Version Name"
                              OnlyValidateIfDirty="true"
                              Class="my-6" />


            </MudItem>

            <MudItem lg="4">
                <MudDatePicker @bind-Date="@_dto.VersionDate"
                    Class="my-5"
                    For="(() => _dto.VersionDate)"
                    Label="Version Date"
                    Variant="Variant.Outlined" />
            </MudItem>

            <MudHidden @bind-Value="@_dto.SoftwareSystemId" />

        </MudGrid>

    </FormControls>
</FSForm>

@code {

    [Parameter]
    public EventCallback<MudForm> OnSubmitForm { get; set; }

    [Parameter]
    public MudForm? MudForm { get; set; } = new();

    [CascadingParameter]
    public SoftwareVersionDto _dto { get; set; } = new();

    [Parameter]
    public int SoftwareSystemId { get; set; }

    private async Task SubmitForm()
    {
        await OnSubmitForm.InvokeAsync(MudForm);
    }
}