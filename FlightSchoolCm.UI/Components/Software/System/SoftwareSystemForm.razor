@namespace FlightSchoolCm.UI.Components.Software
@inherits FluxorComponent
@inject IState<SoftwareState> State

<FSForm OnSubmitForm="SubmitForm" TItem="SoftwareSystemDto">
    <FormControls>

        <MudGrid>

            <MudItem>

                <MudTextField @bind-Value="State.Value.SoftwareSystemDto.Name"
                              Variant="Variant.Outlined"
                              For="(() => State.Value.SoftwareSystemDto.Name)"
                              Label="System Name"
                              OnlyValidateIfDirty="true"
                              Class="my-6" />
            </MudItem>

            <MudHidden @bind-Value="@State.Value.SoftwareSystemDto.MaintainableId" />

        </MudGrid>

    </FormControls>
</FSForm>

@code {

    [Parameter]
    public EventCallback<MudForm> OnSubmitForm { get; set; }

    [Parameter]
    public MudForm? MudForm { get; set; } = new();

    private async Task SubmitForm()
    {
        await OnSubmitForm.InvokeAsync(MudForm);
    }
}