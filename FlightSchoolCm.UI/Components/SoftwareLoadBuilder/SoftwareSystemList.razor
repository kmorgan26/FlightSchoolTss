<FSList TItem="SoftwareSystemDto" Items="SoftwareSystemDtos" OnSelectedItemsChanged="SelectionChanged">
    <ChildContent>
        @foreach (var item in SoftwareSystemDtos!)
        {
            <MudListItem Text="@item.Name" Value="@item.Id" />
        }
    </ChildContent>
</FSList>

@code {

    [Parameter]
    public EventCallback<int> OnSelectedSoftwareSystemChanged { get; set; }

    [Parameter]
    public IEnumerable<SoftwareSystemDto>? SoftwareSystemDtos { get; set; }

    private async Task SelectionChanged(int id)
    {
        await OnSelectedSoftwareSystemChanged.InvokeAsync(id);
    }
    
}