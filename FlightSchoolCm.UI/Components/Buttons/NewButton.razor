@inherits MudButton
@namespace FlightSchoolCm.UI.Components.Buttons

<MudButton
    Variant="Variant.Filled" 
    ButtonType="ButtonType.Button"
    EndIcon="@Icons.Material.Filled.AddCircle" 
    IconColor="Color.Inherit" 
    Color="Color.Success" 
    Size="Size.Small" 
    Link="@Url">
    New
</MudButton>

@code {

    /// <summary>
    /// Clicking the button will open the referenced route. Example "/route/new" 
    /// </summary>
    
    [Parameter]
    public string? Url { get; set; }

}
