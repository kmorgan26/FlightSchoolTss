@inherits MudButton
@namespace FlightSchoolCm.UI.Components.Buttons

<MudButton 
    Variant="Variant.Filled" 
    ButtonType="ButtonType.Button"
    EndIcon="@Icons.Material.Filled.Cancel" 
    IconColor="Color.Inherit" 
    Color="Color.Error" 
    Size="Size.Small"
    Link="@Url">
    Cancel
</MudButton>

@code {

    /// <summary>
    /// Enter the route to be navigated to upon cancellation (/route) 
    /// </summary>
    [Parameter]
    public string? Url { get; set; }

}
