@inherits MudButton
@namespace FlightSchoolCm.UI.Components.Buttons

<MudButton 
    Variant="Variant.Filled" 
    ButtonType="ButtonType.Submit" 
    EndIcon="@Icons.Material.Filled.Save" 
    IconColor="Color.Inherit" 
    Color="Color.Primary" 
    Size="Size.Small">
    @ButtonText
</MudButton>

@code{

    /// <summary>
    /// Enter the text to display on the face of the button 
    /// </summary>
    [Parameter]
    public string? ButtonText { get; set; }

}